<!-- $Id: tFileInputXML.xml 696 2006-11-23 05:45:10Z nrousseau $ -->
<COMPONENT>
	<HEADER
			PLATEFORM="ALL"
			SERIAL=""
			VERSION="0.1"
			STATUS="ALPHA"
			COMPATIBILITY="ALL"
			AUTHOR="Benoit Courtine"
			RELEASE_DATE="20101201A"
			STARTABLE="true"
			HAS_CONDITIONAL_OUTPUTS="true"
	>
		<SIGNATURE/>
	</HEADER>

	<FAMILIES>
		<FAMILY>File/Input</FAMILY>
		<FAMILY>XML</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL/>
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1"/>
		<CONNECTOR NAME="REJECT" CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" LINE_STYLE="2" COLOR="FF0000" BASE_SCHEMA="FLOW"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="COMPONENT_OK"/>
		<CONNECTOR CTYPE="COMPONENT_ERROR"/>
		<CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="PROPERTY" FIELD="PROPERTY_TYPE" SHOW="true" NUM_ROW="1" REPOSITORY_VALUE="XML"/>

		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="2">
			<!--SHOW_IF="PROPERTY_TYPE=='BUILT_IN'"-->
			<DEFAULT/>
		</PARAMETER>

		<PARAMETER NAME="FILENAME" FIELD="FILE" NUM_ROW="3" REQUIRED="true" REPOSITORY_VALUE="FILE_PATH">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/in.xml"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="LOOP_QUERY" FIELD="TEXT" NUM_ROW="4" REPOSITORY_VALUE="XPATH_QUERY">
			<DEFAULT>"/bills/bill/line"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="MAPPING" FIELD="TABLE" REQUIRED="true" NUM_ROW="5" NB_LINES="5" REPOSITORY_VALUE="XML_MAPPING">
			<ITEMS BASED_ON_SCHEMA="true">
				<ITEM NAME="QUERY" REPOSITORY_ITEM="XML_QUERY"/>
				<ITEM NAME="NODECHECK" FIELD="CHECK" VALUE="false"/>
				<ITEM NAME="MULTINODECHECK" FIELD="CHECK" VALUE="false"/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="LIMIT" FIELD="TEXT" NUM_ROW="20" REQUIRED="false" REPOSITORY_VALUE="LIMIT">
			<DEFAULT></DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DIE_ON_ERROR" FIELD="CHECK" NUM_ROW="30">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="SCHEMA_REJECT" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="40" CONTEXT="REJECT" SHOW="true">
			<TABLE READONLY="true">
				<COLUMN NAME="errorCode" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
				<COLUMN NAME="errorMessage" TYPE="id_String" LENGTH="255" READONLY="false" CUSTOM="true"/>
			</TABLE>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="ADVANCED_SEPARATOR" FIELD="CHECK" REQUIRED="true" NUM_ROW="10">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="THOUSANDS_SEPARATOR" FIELD="TEXT" REQUIRED="true" NUM_ROW="10" SHOW_IF="(ADVANCED_SEPARATOR == 'true')">
			<DEFAULT>","</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="DECIMAL_SEPARATOR" FIELD="TEXT" REQUIRED="true" NUM_ROW="10" SHOW_IF="(ADVANCED_SEPARATOR == 'true')">
			<DEFAULT>"."</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="IGNORE_NS" FIELD="CHECK" REQUIRED="false" NUM_ROW="20">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="TMP_FILENAME" FIELD="FILE" REQUIRED="false" NUM_ROW="20" SHOW_IF="IGNORE_NS=='true'">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/temp.xml"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USE_SEPARATOR" FIELD="CHECK" REQUIRED="false" NUM_ROW="25">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="FIELD_SEPARATOR" FIELD="TEXT" REQUIRED="true" NUM_ROW="25" SHOW_IF="USE_SEPARATOR == 'true')">
			<DEFAULT>","</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="GENERATION_MODE" FIELD="CLOSED_LIST" NUM_ROW="40">
			<ITEMS DEFAULT="DOM4J">
				<ITEM NAME="DOM4J" VALUE="Dom4j"/>
				<ITEM NAME="XERCES" VALUE="Xerces"/>
				<ITEM NAME="SAX" VALUE="SAX"/>
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="30" REQUIRED="true" REPOSITORY_VALUE="ENCODING">
			<DEFAULT>"ISO-8859-15"</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="Java_DOM4J1.6" MODULE="dom4j-1.6.1.jar" REQUIRED="true"/>
			<IMPORT NAME="Java_JAXEN1.1" MODULE="jaxen-1.1.1.jar" REQUIRED="true"/>
			<IMPORT NAME="Java_xercesImpl" MODULE="xercesImpl.jar" REQUIRED="true"/>
			<IMPORT NAME="Java_talendSAX" MODULE="TalendSAX.jar" REQUIRED="true"/>
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER"/>
	</RETURNS>
</COMPONENT>