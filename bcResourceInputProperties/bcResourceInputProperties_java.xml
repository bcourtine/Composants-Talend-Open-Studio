<COMPONENT>
	<HEADER
		PLATEFORM="ALL"
		SERIAL=""
		VERSION="1.0"
		STATUS="ALPHA"
		COMPATIBILITY="ALL"
		AUTHOR="Benoit Courtine"
		RELEASE_DATE="20100413A"
		STARTABLE="true"
	>
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>File/Input</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" />
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK" />
		<CONNECTOR CTYPE="COMPONENT_ERROR" />
		<CONNECTOR CTYPE="RUN_IF" />
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" NUM_ROW="10" READONLY="true">
			<TABLE READONLY="true" IF="RETRIVE_MODE=='RETRIVE_ALL'">
				<COLUMN NAME="key" TYPE="id_String" LENGTH="255" READONLY="true" />
				<COLUMN NAME="value" TYPE="id_String" LENGTH="255" READONLY="true" />
				<COLUMN NAME="section" TYPE="id_String" LENGTH="255" READONLY="true" />
			</TABLE>

			<TABLE READONLY="true" IF="RETRIVE_MODE=='RETRIVE_SECTIONS'">
				<COLUMN NAME="section" TYPE="id_String" LENGTH="255" READONLY="true" />
			</TABLE>

			<TABLE READONLY="true" IF="RETRIVE_MODE=='RETRIVE_BY_SECTION'">
				<COLUMN NAME="key" TYPE="id_String" LENGTH="255" READONLY="true" />
				<COLUMN NAME="value" TYPE="id_String" LENGTH="255" READONLY="true" />
			</TABLE>

			<TABLE READONLY="true" IF="FILE_FORMAT=='PROPERTIES_FORMAT'">
				<COLUMN NAME="key" TYPE="id_String" LENGTH="255" READONLY="true" />
				<COLUMN NAME="value" TYPE="id_String" LENGTH="255" READONLY="true" />
			</TABLE>
		</PARAMETER>

		<PARAMETER NAME="FILE_FORMAT" FIELD="CLOSED_LIST" NUM_ROW="15" REQUIRED="false">
			<ITEMS DEFAULT="PROPERTIES_FORMAT">
				<ITEM NAME="PROPERTIES_FORMAT" VALUE="PROPERTIES_FORMAT" />
				<ITEM NAME="INI_FORMAT" VALUE="INI_FORMAT" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="RETRIVE_MODE" FIELD="CLOSED_LIST" NUM_ROW="16" REQUIRED="false" SHOW_IF="(FILE_FORMAT=='INI_FORMAT')">
			<ITEMS DEFAULT="RETRIVE_BY_SECTION">
				<ITEM NAME="RETRIVE_ALL" VALUE="RETRIVE_ALL" />
				<ITEM NAME="RETRIVE_SECTIONS" VALUE="RETRIVE_SECTIONS" />
				<ITEM NAME="RETRIVE_BY_SECTION" VALUE="RETRIVE_BY_SECTION" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="SECTION_NAME" FIELD="TEXT" NUM_ROW="17" REQUIRED="true"
			SHOW_IF="(RETRIVE_MODE=='RETRIVE_BY_SECTION') AND (FILE_FORMAT=='INI_FORMAT')">
			<DEFAULT>"section"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="RESOURCENAME" FIELD="TEXT" NUM_ROW="20" REQUIRED="true">
			<DEFAULT>"config.properties"</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="ENCODING" FIELD="ENCODING_TYPE" NUM_ROW="10" REQUIRED="true" REPOSITORY_VALUE="ENCODING">
			<DEFAULT>"ISO-8859-15"</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="Java_Ini4j-0.5.1" MODULE="ini4j-0.5.1.jar" REQUIRED="true" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS>
		<RETURN NAME="NB_LINE" TYPE="id_Integer" AVAILABILITY="AFTER" />
	</RETURNS>
</COMPONENT>